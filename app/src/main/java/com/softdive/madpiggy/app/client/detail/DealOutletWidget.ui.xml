<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:mgwt="urn:import:com.googlecode.mgwt.ui.client.widget" xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	
	.fixed-second-right {
		margin: 5px;
		margin-top: 13px;
	}
	.margin-left {
		margin-left:10px;
	}
	.icon{
		height:40px;
		width:40px;
	}
	.imageCrop{
		object-fit: cover;
    	object-position: center;
	}
	.margin {
		margin: 5px;
	}
	.saperator-horizontal-thin {
		margin-bottom: 5px;
		height: 1px;
		background-color: #E2D6D6;
	}
	.saperator-vertical-thin {
		margin-right: 2px;
		margin-left: 2px;
		width: 1px;
		background-color: #E2D6D6;
	}
.inline{
	display: inline-table;
	}
	</ui:style>
	<mgwt:panel.flex.FlexPanel orientation="HORIZONTAL" width="100%">
	
		<mgwt:panel.flex.FlexPanel orientation="HORIZONTAL" width="100%">
			
			<mgwt:panel.flex.FlexPanel  orientation="VERTICAL" justification="START" styleName="{style.inline}" >
				<mgwt:panel.flex.FlexPanel  orientation="HORIZONTAL" justification="START">
					<g:Image  ui:field="outletImage" styleName="{style.imageCrop}"/>
				</mgwt:panel.flex.FlexPanel>
			</mgwt:panel.flex.FlexPanel>
			
			<mgwt:panel.flex.FlexPanel orientation="HORIZONTAL" styleName="{style.margin-left}" ui:field="titleContainer" >
				<mgwt:panel.flex.FlexPanel orientation="VERTICAL"  width="85%" >
					<g:Label ui:field="outletName" styleName="title" />
					<g:Label ui:field="outletAddress" styleName="description" />
				</mgwt:panel.flex.FlexPanel>
			</mgwt:panel.flex.FlexPanel>
		</mgwt:panel.flex.FlexPanel>
			
		<mgwt:panel.flex.FlexPanel  orientation="VERTICAL" justification="CENTER" >
			<mgwt:panel.flex.FlexPanel orientation="VERTICAL">
			    <mgwt:touch.TouchPanel ui:field="directionsTouch" >
			        <g:HTMLPanel styleName="{style.margin}">
						<div direction="direction">
							<core-icon icon="maps:directions" class="{style.icon}" color="red" />
						</div>
					</g:HTMLPanel>
			    </mgwt:touch.TouchPanel>
				<g:HTMLPanel styleName="{style.saperator-horizontal-thin}" />
				<g:Label ui:field="outletDistance" />
			</mgwt:panel.flex.FlexPanel>
		</mgwt:panel.flex.FlexPanel>
		
	</mgwt:panel.flex.FlexPanel>
</ui:UiBinder> 