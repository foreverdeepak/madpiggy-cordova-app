<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:mgwt="urn:import:com.googlecode.mgwt.ui.client.widget" xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	
	.margin-left {
		margin-left:10px;
	}
	.icon{
		height:40px;
		width:40px;
	}
	.imageCrop{
		object-fit: cover;
    	object-position: center;
	}
	.margin {
		position:  relative;
	}
	.saperator-horizontal-thin {
		margin-bottom: 5px;
		height: 1px;
		background-color: #E2D6D6;
	}
	.saperator-vertical-thin {
		margin-right: 2px;
		margin-left: 2px;
		width: 1px;
		background-color: #E2D6D6;
	}
	
	.inline {
		display: inline-table;
	}
	.bookmark{
		position: absolute;
		bottom: 0px;
		right: 10px;
	}
	</ui:style>
	<mgwt:panel.flex.FlexPanel orientation="HORIZONTAL" width="100%" >
		<mgwt:panel.flex.FlexPanel orientation="HORIZONTAL" width="100%">

			<mgwt:panel.flex.FlexPanel  orientation="VERTICAL" justification="CENTER"  styleName="{style.inline}" >
				<mgwt:panel.flex.FlexPanel  orientation="HORIZONTAL" justification="CENTER">
					<g:Image  ui:field="mallImage" styleName="{style.imageCrop}"/>
				</mgwt:panel.flex.FlexPanel>
			</mgwt:panel.flex.FlexPanel>
			
			<mgwt:panel.flex.FlexPanel orientation="HORIZONTAL" styleName="{style.margin-left}" width="80%">
				<mgwt:panel.flex.FlexPanel orientation="VERTICAL" >
					<g:Label ui:field="mallName" styleName="title" />
					<g:Label ui:field="mallAddress" styleName="description" />
				</mgwt:panel.flex.FlexPanel>
			</mgwt:panel.flex.FlexPanel>
		</mgwt:panel.flex.FlexPanel>
			
			
		<mgwt:panel.flex.FlexPanel  styleName="{style.margin}" orientation="HORIZONTAL" justification="START">
			<g:HTMLPanel styleName="{style.bookmark}" >
				<div star="star">
					<core-icon icon="bookmark" ui:field="favImage" class="dislike" />
				</div>
			</g:HTMLPanel>
		</mgwt:panel.flex.FlexPanel> 
			
		<mgwt:panel.flex.FlexPanel  orientation="VERTICAL" justification="CENTER" >
			<mgwt:panel.flex.FlexPanel orientation="VERTICAL">
				<g:HTMLPanel styleName="{style.margin}">
					<div direction="direction">
						<core-icon icon="maps:directions" class="{style.icon}" color="red" />
					</div>
				</g:HTMLPanel>
				<g:HTMLPanel styleName="{style.saperator-horizontal-thin}" />
				<g:Label ui:field="mallDistance" />
			</mgwt:panel.flex.FlexPanel>
		</mgwt:panel.flex.FlexPanel>
		
	</mgwt:panel.flex.FlexPanel>
</ui:UiBinder> 