<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:mgwt="urn:import:com.googlecode.mgwt.ui.client.widget"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with type="com.softdive.madpiggy.app.client.global.GlobalResources" field="global" />
	<ui:style>
	.card {
		background-color: white;
		padding-bottom: 4px;
		box-shadow: 0 1px 2px #aaa;
		border-radius: 0.15rem;
	}
	.img{
		border-top-left-radius: 5px;
		border-top-right-radius: 5px;
	}
	.saperator-horizontal {
		margin: 2px;
		margin-top: 5px;
		margin-bottom: 5px;
		height: 1px;
		background-color: #E2D6D6;
	}
	.roundImage {
	    background-repeat: no-repeat;
	    background-position: 50%;
	    border-radius: 50%;
	    width: 25px;
	    height: 25px;
	    margin-left: 3px;
	}
	.heart {
		padding: 0px;
	}
	.title {
		white-space: nowrap;
		text-overflow: ellipsis;
		width: 100%;
		display: block;
		overflow: hidden;
		font-size: 15px;
	}
	.description {
		white-space: nowrap;
		text-overflow: ellipsis;
		width: 95%;
		display: block;
		overflow: hidden;
		font-size: 12px;
		font-weight: lighter;
	}
	.exclusive {
		position: absolute;
		top: 0px;
		left: 0px;
		width: 40%;
	}	
	</ui:style>
	<g:HTMLPanel ui:field="selectable">
		<paper-shadow z="0" class="{style.card}">
			<g:Image ui:field="dealImage" styleName="{style.img}"/>
			<g:Label ui:field="title" styleName="{style.title}"/>
			<g:Label ui:field="descr" styleName="{style.description}" width="95%"/>
			<g:Label ui:field="rating" styleName="{style.description}"/>
			<g:HTMLPanel styleName="{style.saperator-horizontal}" />
			<mgwt:panel.flex.FlexPanel orientation="HORIZONTAL">
				<g:Image ui:field="companyImage" styleName="{style.roundImage}"/>
				<g:Label ui:field="companyName" styleName="{style.description}" width="95%"/>
			</mgwt:panel.flex.FlexPanel>
			<g:Image ui:field="exclusiveImage" url="{global.exclusiveImage.getSafeUri.asString}" styleName="{style.exclusive}"/>
		</paper-shadow>
		<div ui:field="dummy"></div>
	</g:HTMLPanel>
</ui:UiBinder> 