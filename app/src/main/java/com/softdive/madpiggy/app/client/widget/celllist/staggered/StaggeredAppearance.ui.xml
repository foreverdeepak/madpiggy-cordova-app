<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:mgwt="urn:import:com.googlecode.mgwt.ui.client.widget">

	<ui:style>
	.margin {
		margin: 10px;
	}
	</ui:style>
	<g:HTMLPanel>
		<g:FlowPanel ui:field="container"/>
		<mgwt:panel.flex.FlexPanel orientation="HORIZONTAL" justification="CENTER">
			<g:HTMLPanel ui:field="footer" styleName="{style.margin}">
					<paper-spinner active=""/>
			</g:HTMLPanel>
		</mgwt:panel.flex.FlexPanel>
	</g:HTMLPanel>
</ui:UiBinder>