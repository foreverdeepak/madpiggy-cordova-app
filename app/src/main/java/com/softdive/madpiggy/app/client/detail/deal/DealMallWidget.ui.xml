<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:mgwt="urn:import:com.googlecode.mgwt.ui.client.widget" xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.saperator-horizontal {
		margin-bottom: 5px;
		height: 2px;
		background-color: #E2D6D6;
	}
	
	.card {
		background-color: white;
		margin: 4px;
		padding: 10px;
		box-shadow: 0 1px 2px #aaa;
		border-radius: 0.15rem;
	}
	
	.card-map {
		background-color: white;
		margin: 4px;
		padding: 0px;
		box-shadow: 0 1px 2px #aaa;
		border-radius: 0.15rem;
	}
	
	.mallDescription {
		position: absolute;
		top: 0.15em;
	}
	</ui:style>

	<g:HTMLPanel>
		<div z="0" class="{style.card-map}">
			<mgwt:touch.TouchPanel ui:field="mapTouch" >
				<g:HTMLPanel ui:field="mapContainer" height="10em" width="100%"/>
			</mgwt:touch.TouchPanel>
			<g:HTMLPanel styleName="{style.mallDescription}" ui:field="description">
				<mgwt:panel.flex.FlexPanel orientation="HORIZONTAL" width="100%" justification="CENTER">
					<g:HTMLPanel>
						<paper-shadow z="0" class="{style.card}">
							<g:Label ui:field="mallName"/>
							<div class="{style.saperator-horizontal}" />
							<g:Label ui:field="mallAddress"/>
						</paper-shadow>
					</g:HTMLPanel>
				</mgwt:panel.flex.FlexPanel>
			</g:HTMLPanel>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 