<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:p='urn:import:com.vaadin.components.gwt.polymer.client.widget'>
    <p:CoreHeaderPanel mode="scroll" drawer="">
        <core-toolbar id="navheader" class="tall">
            <img class="middle profile" src=""/>
            <div class="bottom" layout="" vertical="">
                <span ui:field="username">Your Name</span>
                <span ui:field="email">yourmail@domain.com</span>
            </div>
        </core-toolbar>
        <core-menu selected="0" excludedLocalNames="div" ui:field="menu">
            <paper-item ui:field="nearby"><core-icon icon="inbox"></core-icon>Nearby</paper-item>
            <paper-item ui:field="map"><core-icon icon="social:people"></core-icon>Map</paper-item>
            <div class="separator"></div>
            <paper-item ui:field="notifications"><core-icon icon="star"></core-icon>Notifications</paper-item>
            <paper-item ui:field="checkin"><core-icon icon="send"></core-icon>Checkin</paper-item>
            <div class="separator"></div>
            <paper-item ui:field="about"><core-icon icon="mail"></core-icon>About</paper-item>
            <paper-item ui:field="logout"><core-icon icon="report"></core-icon>Logout</paper-item>
        </core-menu>
    </p:CoreHeaderPanel>
</ui:UiBinder>