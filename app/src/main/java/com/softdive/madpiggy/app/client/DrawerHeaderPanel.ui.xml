<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
               xmlns:p='urn:import:com.softdive.madpiggy.app.client.polymer.widget'>
    <p:PaperHeaderPanel mode="scroll" drawer="">
        <paper-toolbar id="navheader" class="tall">
            <img class="middle profile" src=""/>
            <div class="bottom" layout="" vertical="">
                <span ui:field="username">Your Name</span>
                <span ui:field="email">yourmail@domain.com</span>
            </div>
        </paper-toolbar>
        <iron-menu selected="0" excludedLocalNames="div" ui:field="menu">
            <paper-item ui:field="nearby"><iron-icon icon="inbox"></iron-icon>Nearby</paper-item>
            <paper-item ui:field="map"><iron-icon icon="social:people"></iron-icon>Map</paper-item>
            <div class="separator"></div>
            <paper-item ui:field="notifications"><iron-icon icon="star"></iron-icon>Notifications</paper-item>
            <paper-item ui:field="checkin"><iron-icon icon="send"></iron-icon>Checkin</paper-item>
            <div class="separator"></div>
            <paper-item ui:field="about"><iron-icon icon="mail"></iron-icon>About</paper-item>
            <paper-item ui:field="logout"><iron-icon icon="report"></iron-icon>Logout</paper-item>
		</iron-menu>
          </p:PaperHeaderPanel>
</ui:UiBinder>