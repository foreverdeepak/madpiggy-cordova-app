                            Content Oone<br/>Content Oone<br/>
                            Content Oone<br/>Content Oone<br/>
                            Content Oone<br/>Content Oone<br/>
                            Content Oone<br/>Content Oone<br/>
                            Content Oone<br/>Content Oone<br/>
                            Content Oone<br/>Content Oone<br/>
                            Content Oone<br/>Content Oone<br/>
                            Content Oone<br/>Content Oone<br/>
                            Content Oone<br/>Content Oone<br/>
                            Content three<br/>
                            Content Oone<br/>
                            Content Oone<br/>
                            Content Oone<br/>
                            Content three<br/>

                        </div>

                    </p:ViewFragment>
                    <p:ViewFragment name="Three">
                        <div class="pager-content">
                            Content Two<br/>
                            Content Two<br/>
                            Content Two<br/>

                        </div>

                    </p:ViewFragment>

                </p:ViewPager>

            </div>
        </core-scroll-header-panel>

    </core-drawer-panel>


    <paper-fab id="fab" icon="create"></paper-fab>
    <paper-toast ui:field="toast" text="Your draft has been discarded."></paper-toast>


    </g:HTMLPanel>
</ui:UiBinder>